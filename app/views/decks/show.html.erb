<% @deck.cards.find_each do |card| %>
  <%= image_tag card.image.url(:thumb) %> <br>
  <%= t('cards.name') %> <%= card.original_text %> <br>
  <%= t('cards.description') %><%= card.translated_text %> <br>
  <%= link_to 'Show', deck_card_path(@deck, card) %> <br>
  <%= link_to 'Edit', edit_deck_card_path(@deck, card) %> <br>
  <%= button_to 'Destroy', deck_card_path(@deck, card), method: :delete %> <br>
<% end %>

<%= link_to 'Create new card', new_deck_card_path(@deck) %>